<form action="/SportType/update/<%= SportType.id %>" method="POST" class="edit">
    <div class="form-group">
        <h2><%= __('editing a SportType') %></h2>

        <div class="form-group" style="width: 400px;">
            <label><%= __('Name') %></label>
            <input value="<%= SportType.Name %>" name="Name" type="text" class="form-control"/>
        </div>

        <div class="form-group" style="width: 400px;">
            <label><%= __('Description') %></label>
            <input value="<%= SportType.Description %>" name="Description" type="text" class="form-control"/>
        </div>

    </div>
    <input type="submit" value="<%= __('Update') %>" class="btn btn-default"/>
    <a href="/SportType/show/<%= SportType.id %>" class="btn btn-danger"><%= __('Cancel') %></a>
</form>
	
	