	<form action="/Trainer/update/<%=Trainer.id%>" method="POST" class="edit">
	<div class="form-group">
		<h2><%= __('editing a Trainer') %></h2>

	<div class="form-group" style="width: 400px;">
	<label><%= __('Name') %></label>
	<input value="<%= Trainer.Name %>" name="Name" type="text" class="form-control"/>
	</div>

	<div class="form-group" style="width: 400px;">
	<label><%= __('Birthday') %></label>
	<input value="<%= Trainer.Birthday %>" name="Birthday" type="text" class="form-control"/>
	</div>

	<div class="form-group" style="width: 400px;">
	<label><%= __('Email') %></label>
	<input value="<%= Trainer.Email %>" name="Email" type="text" class="form-control"/>
	</div>

		</div>
		<input type="submit" value="<%= __('Update') %>" class="btn btn-default"/>
		<a href="/Trainer/show/<%=Trainer.id %>" class="btn btn-danger"><%= __('Cancel') %></a>
	</form>
	
	